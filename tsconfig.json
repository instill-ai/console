{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components": ["components"],
      "@/components/*": ["components/*"],
      "@/types": ["types"],
      "@/types/*": ["types/*"],
      "@/styles": ["styles"],
      "@/styles/*": ["styles/*"],
      "@/lib": ["lib"],
      "@/lib/*": ["lib/*"],
      "@/pages": ["pages"],
      "@/pages/*": ["pages/*"],
      "@/stores": ["stores"],
      "@/stores/*": ["stores/*"]
    },
    "target": "es5",
    "downlevelIteration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.json"
  ],
  "exclude": ["**/node_modules", "**/.*/", ".next"]
}
