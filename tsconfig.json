{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components": ["components"],
      "@/components/*": ["components/*"],
      "@/types": ["types"],
      "@/types/*": ["types/*"],
      "@/hooks": ["hooks"],
      "@/hooks/*": ["hooks/*"],
      "@/utils": ["utils"],
      "@/utils/*": ["utils/*"],
      "@/styles": ["styles"],
      "@/styles/*": ["styles/*"],

      // We didn't support import directly from "@/services"
      "@/services/*": ["services/*"],
      "@/lib": ["lib"],
      "@/lib/*": ["lib/*"],
      "@/pages": ["pages"],
      "@/pages/*": ["pages/*"],
      "@/mocks": ["mocks"],
      "@/mocks/*": ["mocks/*"],
      "@/contexts": ["contexts"],
      "@/contexts/*": ["contexts/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.json"
  ],
  "exclude": ["**/node_modules", "**/.*/", ".next"]
}
